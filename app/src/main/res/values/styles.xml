<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="schedTvStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="schedTvNameVertStyle" parent="schedTvStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/doc_color</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="schedLargeTvStyle" parent="schedTvStyle">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="schedLargeTvNameVertStyle" parent="schedTvNameVertStyle">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="schedTvWhStyle" parent="schedTvStyle">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="schedLargeTvWhStyle" parent="schedTvWhStyle">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="schedTvDayNameStyle" parent="schedTvWhStyle">
        <item name="android:background">@color/day_name_color</item>
    </style>

</resources>
